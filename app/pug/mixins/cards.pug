mixin article-no-img(data, title, link)
    .card.card_background.card_display
        .card__description.card__description_margin
            time(datetime="2011-11").card__data= data
            h3.card__title.card__title_height(data-dotdotdot="article-no-img")= title
            a(href=link).card__link читать
            a(href=link).card__link_full


mixin card-doctor(img, title, profession, link)
    .card.card_doctor
        img.card__img.card__img_mh(src= img alt="Фото специалиста")
        .card__description
            h3.card__title= title
            span= profession
            a(href=link).card__link_full