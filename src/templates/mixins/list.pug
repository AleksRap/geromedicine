mixin list(data)

  each item in data.list
    section.list
      h2.title.list__title(class=data.titleCenter ? 'list__title_center' : '') !{item.title}
      if (item.subtitle)
        h3.list__subtitle !{item.subtitle}
      ul.list__list
        each paragraph in item.arr
          li.list__item
            span.list__descr=paragraph
