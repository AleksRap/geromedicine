extends layout/layout
include mixins/banner-stock

block head
  - var title = 'Услуги и цены';
  - var pageId = 2;

block header
  include layout/header

block content
  main
    .content
      .breadcrumbs(itemscope="" itemtype="http://schema.org/BreadcrumbList")
        span(itemscope="" itemprop="itemListElement" itemtype="http://schema.org/ListItem")
          a(itemprop="item" href="/") главная
            meta(itemprop="name" content="Главная")
            meta(itemprop="position" content="1")
        span /
        span(itemscope="" itemprop="itemListElement" itemtype="http://schema.org/ListItem")
          a(itemprop="item" href="price.html") услуги и цены
            meta(itemprop="name" content="Услуги и цены")
            meta(itemprop="position" content="2")


      include components/slider


      .amenities
        h1.title Прайс-лист
        hr.title__hr.amenities__hr

        .amenities__description
          p
            | Здесь представлены цены нашего клинического обслуживания,
            b  патронаж рассчитывается индивидуально, звоните!

        .amenities__spoilers

          -
            amenities = [
              {
                sectionName: 'Вызов на дом',
                list: [
                  {name: 'Прием (осмотр, консультация) врача-кардиолога первичный', price: '1 500₽'},
                  {name: 'Комплексная гериатрическая оценка', price: '1 500₽'},
                  {name: 'Прием (осмотр, консультация) врача-кардиолога первичный', price: '22 500₽'}
                ]
              },
              {
                sectionName: 'Диагностика',
                list: [
                  {name: 'Прием (осмотр, консультация) врача-кардиолога первичный', price: '1 500₽'},
                  {name: 'Комплексная гериатрическая оценка', price: '1 500₽'},
                  {name: 'Прием (осмотр, консультация) врача-кардиолога первичный', price: '22 500₽'}
                ]
              },
              {
                sectionName: 'Кардиология',
                list: [
                  {name: 'Прием (осмотр, консультация) врача-кардиолога первичный', price: '1 500₽'},
                  {name: 'Комплексная гериатрическая оценка', price: '1 500₽'},
                  {name: 'Прием (осмотр, консультация) врача-кардиолога первичный', price: '22 500₽'}
                ]
              }
            ]

          each spoiler in amenities
            .spoiler
              .spoiler__header
                h5.spoiler__section-name=spoiler.sectionName
                .spoiler__indicator
              .spoiler__body
                a.spoiler__row.spoiler__row_more(href='name-service-cardiology.html')
                  .spoiler__more Подробнее о направлении
                each item in spoiler.list
                  a.spoiler__row(href="service-cardiology.html")
                    .spoiler__amenities=item.name
                    .spoiler__price=item.price


block footer
  include layout/footer