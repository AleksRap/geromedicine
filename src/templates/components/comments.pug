    .comments__swiper.active(data-wrap="clinic")
      .swiper-content.swiper-comments
        .swiper-wrapper

          each comment in comments
            .swiper-slide.comments__slide
              .comments__info
                h5.comments__name=comment.name
                time(datetime=comment.date).comments__date=comment.dateText
              .comments__text
                p=comment.text

        nav.comments__navigation
          a.button.button_second.comments__btn-all(href="feedback.html") Смотреть все
          .button.button_second.comments__arrow-prev
            button.comments__prev
          .button.button_second.comments__arrow-next
            button.comments__next


    .comments__swiper(data-wrap="specialist")
      .swiper-content.swiper-comments-2
        .swiper-wrapper

          each comment in comments
            .swiper-slide.comments__slide
              .comments__info
                h5.comments__name=comment.name + '2'
